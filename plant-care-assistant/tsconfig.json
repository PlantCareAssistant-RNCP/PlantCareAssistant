{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "ignoreDeprecations": "6.0",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
      "@app/*": ["./app/*"],
      "@components/*": ["./components/*", "./app/components/*"],
      "@components/ui/*": ["./components/ui/*"],
      "@components/features/*": ["./components/features/*"],
      "@components/forms/*": ["./components/forms/*"],
      "@components/layout/*": ["./components/layout/*"],
      "@components/common/*": ["./components/common/*"],
      "@lib/*": ["./lib/*"],
      "@utils/*": ["./utils/*"],
      "@providers/*": ["./providers/*"],
      "@prisma/*": ["./prisma/*"],
      "@api/*": ["./app/api/*"],
      "@icons/*": ["./assets/icons/*"],
      "@assets/*": ["./assets/*"],
      "@images/*": ["./public/images/*"],
      "@public/*": ["./public/*"],
      "@styles/*": ["./styles/*"],
      "@tests/*": ["./tests/*"],
      "@mocks/*": ["./tests/mocks/*", "./__mocks__/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "prisma/seed.mts"
  ],
  "exclude": ["node_modules"]
}
